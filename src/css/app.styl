// app global css in Sass form
primary   = #2EB7E5
secondary = #1f7a99
accent    = #9C27B0
dark      = #0087b4
light     = #73e9ff
positive  = #21BA45
negative  = #C10015
info      = #31CCEC
warning   = #F2C037
grey      = #6c757d
white     = #ffffff
black     = #162c34
bg-body   =   rgba(0,0,0,.25)
label-color  = #212529

.global-font
    font-size: 2rem
    color: positive

.modalSize
  width: 65vw
  max-width: 80vw !important

.modalQrSize
  width: 25vw
  max-width: 80vw !important

.text-wrap
  width: 500px !important
  overflow-wrap: break-all
  color: green

.one-line
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
  max-width: 100%
  overflow: hidden
  -webkit-line-clamp: 1
  -webkit-box-orient: vertical
  height: auto

.icon-btn
  transition: all 0.3s
  max-width: 400px

.icon-btn:hover
  transform: scale(1.3)
  cursor: pointer

.card-btn
  transition: all 0.3s
  max-width: 400px

.card-btn:hover
  transform: scale(1.05)
  cursor: pointer

.label
  font-size: 1.1rem
  font-weight: 500
  color: label-color
  font-style: normal

.nav-link
  font-size: 16px
  font-weight: 700
  color: #3c484c !important
  text-transform: uppercase
  font-style: normal
body
  font-family: 'Afloat font', sans-serif !important
  font-style: normal
  font-weight: 500
  font-size: 16px

a
  color: secondary
  text-decoration: none
a:hover
  text-decoration: underline
  color: primary
.q-field--outlined .q-field__control
  background-color: #FFF
  border-radius: 10px !important
.q-btn:hover
  background-color: secondary !important
.q-layout__section--marginal
  background-color: #FFF
@font-face {
  font-family: 'Afloat font';
  font-style: normal;
  font-weight: 500;
  src: url('/fonts/Whitney-SSm-Medium.ttf') format('ttf');
}
